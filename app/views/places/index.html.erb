<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
  </ol>
  <div class="carousel-caption d-none d-md-block">
        <h3>California's Best Meaderies</h3>
      </div>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag 'slider1.jpg', class: 'd-block img-fluid' %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'slider2.jpg', class: 'd-block img-fluid' %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'slider3.jpg', class: 'd-block img-fluid' %>
       </div>
    <div class="carousel-item">
      <%= image_tag 'slider4.jpg', class: 'd-block img-fluid' %>
        </div>
    <div class="carousel-item">
      <%= image_tag 'slider5.jpg', class: 'd-block img-fluid' %>
   </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<%  @places.each do |place| %> 
<div class="booyah-box col-10 offset-1">
  <h1> <%= link_to place.name, place_path(place) %> </h1> 
  <i> <%= place.address %> </i> <br />
  <p> <%= place.description %> </p> 

  <% if place.user.present? %>
  <small>Added by: <%= place.user.username %></small>
  <% end %>


  <div>
    <% if place.comments.present? %>
    <div class="col-12">
      <blockquote>
        <% if place.comments.last.rating_image.present? %>
        <b><%= image_tag place.comments.last.rating_image %></b>
        <% end %>
        <%= place.comments.last.message %>
      </blockquote>
    </div>
    <% end %>
  </div>

  <div>
    <% if place.photos.present? %>
    <div class="col-12 col-sm-6">
      <blockquote>
        <%= image_tag place.photos.first.picture %>
        <h5> <%= place.photos.first.caption %> </h5>
      </blockquote>
    </div>
    <% end %>
  </div>
</div>
<% end %>




<hr />
<%= paginate @places %>
<%= page_entries_info @places %>

